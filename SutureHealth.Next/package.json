{
  "name": "suture-next",
  "description": "Next generation Suture Health application",
  "version": "1.0.0",
  "node": "18.16.1",
  "private": true,
  "scripts": {
    "dev:local:qa": "env-cmd -f ./.env.qa concurrently --kill-others \"node scripts/proxy.js\" \"cross-env HOST_NAME=localhost node scripts/server.js\"",
    "dev:local": "env-cmd -f ./.env.development env-cmd -f ./.env.local concurrently --kill-others \"node scripts/proxy.js\" \"cross-env HOST_NAME=localhost node scripts/server.js\"",
    "dev:windows": "SET NODE_EXTRA_CA_CERTS=\"$(cat ./certs/.capath)\" && node scripts/server.js",
    "dev": "cross-env NODE_EXTRA_CA_CERTS=\"$(cat ./certs/.capath)\" node scripts/server.js",
    "build": "next build",
    "start": "next start",
    "start:local-webapp": "cross-env NODE_ENV=production NODE_EXTRA_CA_CERTS=\"./certs/.capath\" NEXT_PUBLIC_WEBHOST=\"ci.suturehealth.com\" NEXT_PUBLIC_WEBPORT=44301 node scripts/server.js",
    "start:local": "cross-env NODE_ENV=production NODE_EXTRA_CA_CERTS=\"./certs/.capath\" NEXT_PUBLIC_WEBHOST=\"ci.suturehealth.com\" NEXT_PUBLIC_WEBPORT=3000 node scripts/server.js",
    "lint": "next lint",
    "ssl:setup": "node scripts/ssl-setup.js",
    "prepare": "husky install",
    "local": "cross-env APP_ENV=test node scripts/server.js",
    "test": "cross-env NODE_ENV=test start-server-and-test local http://localhost:3000/ cy:parallel",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:parallel": "cypress-parallel -s cy:run -t 4 -d ./cypress/e2e",
    "coverage": "nyc report --reporter=text-summary",
    "coverage:details": "nyc report --check-coverage true --lines 90",
    "coverage:details:report": "open-cli coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@chakra-ui/icons": "2.0.13",
    "@chakra-ui/react": "2.5.5",
    "@emotion/react": "11.10.6",
    "@emotion/styled": "11.10.6",
    "@microsoft/signalr": "6.0.5",
    "@panzoom/panzoom": "^4.5.1",
    "@reduxjs/toolkit": "^1.9.2",
    "@swan-io/boxed": "^0.12.0",
    "@types/redux-logger": "^3.0.9",
    "camelcase-keys": "^7.0.1",
    "config": "^3.3.7",
    "dayjs": "^1.11.4",
    "devcert": "1.2.2",
    "dotenv": "^16.0.3",
    "framer-motion": "10.10.0",
    "js-cookie": "^3.0.5",
    "lodash.debounce": "^4.0.8",
    "lodash.merge": "^4.6.2",
    "lottie-react": "^2.4.0",
    "next": "^13.1.1",
    "query-string": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.34.0",
    "react-intersection-observer": "^9.4.1",
    "react-joyride": "^2.5.4",
    "react-redux": "^8.0.5",
    "react-rnd": "^10.4.1",
    "react-swipeable": "^7.0.0",
    "react-virtuoso": "^4.5.0",
    "redux-logger": "^3.0.6",
    "sharp": "^0.30.7",
    "suture-theme": "2.2.6",
    "use-context-selector": "^1.4.1",
    "zod": "^3.17.9"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@faker-js/faker": "^8.0.2",
    "@types/config": "^0.0.41",
    "@types/js-cookie": "^3.0.3",
    "@types/lodash.debounce": "^4.0.7",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "17.0.36",
    "@types/react": "18.0.1",
    "@types/react-dom": "18.0.6",
    "@types/react-resizable": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "cypress": "12.16.0",
    "cypress-multi-reporters": "^1.6.3",
    "cypress-parallel": "^0.13.0",
    "env-cmd": "^10.1.0",
    "eslint": "8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^13.0.3",
    "open-cli": "^7.1.0",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.15.2",
    "swc-plugin-coverage-instrument": "^0.0.13",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --cache --fix --ignore-path .gitignore"
    ]
  },
  "nyc": {
    "reporter": [
      "cobertura",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
