<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>SutureHealth.Patients</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <ExcludeXmlAssemblyFiles>false</ExcludeXmlAssemblyFiles>
        <VersionPrefix>$(VERSION_PREFIX)</VersionPrefix>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <DockerfileContext>../.</DockerfileContext>
        <OutputType>Library</OutputType>
		<NoWarn>$(NoWarn);1573</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <DocumentationFile>SutureHealth.PatientAPI.AspNetCore.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\.editorconfig" Link=".editorconfig" />
    </ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.17.0" />
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SutureHealth.ApplicationAPI.AspNetCore\SutureHealth.ApplicationAPI.AspNetCore.csproj" />
        <ProjectReference Include="..\SutureHealth.AspNetCore.Amazon\SutureHealth.AspNetCore.Amazon.csproj" />
        <ProjectReference Include="..\SutureHealth.AspNetCore\SutureHealth.AspNetCore.csproj" />
        <ProjectReference Include="..\SutureHealth.PatientAPI.Services\SutureHealth.PatientAPI.Services.csproj" />
        <ProjectReference Include="..\SutureHealth.RequestAPI.Core\SutureHealth.RequestAPI.Core.csproj" />
    </ItemGroup>

</Project>