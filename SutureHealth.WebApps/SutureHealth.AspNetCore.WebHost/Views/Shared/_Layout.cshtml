@inject SutureSignInManager SignInManager
@model IBaseViewModel
@{
    var PageTitle = "SutureHealth";
    if (ViewData.TryGetValue("Title", out var title))
    {
        PageTitle += $" - {title}";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@PageTitle</title>
    @{
        var kendo = System.Reflection.Assembly.GetAssembly(typeof(Kendo.Mvc.UI.IWidget)).GetName().Version;
        var kendoVersion = $"{kendo.Major}.{kendo.Minor}.{kendo.Build}";
    }
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Open+Sans&display=swap" rel="stylesheet" />
    <link href="~/images/logo2_emblem.png" type="image/x-icon" rel="shortcut icon" />

    <!-- BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   
    @if ((Model?.RequireUI ?? false) || (Model?.RequireKendo ?? false))
    {
        <link href="https://kendo.cdn.telerik.com/@kendoVersion/styles/kendo.common.min.css" rel="stylesheet" type="text/css" />
        <link href="https://kendo.cdn.telerik.com/@kendoVersion/styles/kendo.default.min.css" rel="stylesheet" type="text/css" />
        <link href="https://kendo.cdn.telerik.com/@kendoVersion/styles/kendo.default.mobile.min.css" rel="stylesheet" type="text/css" />
        <link href="https://kendo.cdn.telerik.com/@kendoVersion/styles/kendo.mobile.all.min.css" rel="stylesheet" type="text/css" />
    }
    <link rel="stylesheet" href="~/css/SutureSign.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Site.min.css" asp-append-version="true" />
    @if (Model?.RequireUI ?? false)
    {
        <link rel="stylesheet" href="~/css/UI.min.css" asp-append-version="true" />
    }
    @await RenderSectionAsync("Styles", required: false)
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/7631788b33.js" crossorigin="anonymous"></script>
    <script src="~/js/SHFunctions.js"></script>
    @if ((Model?.RequireUI ?? false) || (Model?.RequireKendo ?? false) || Model?.CurrentUser != null)
    {
        <script src="https://kendo.cdn.telerik.com/@kendoVersion/js/jszip.min.js"></script>
        <script src="https://kendo.cdn.telerik.com/@kendoVersion/js/kendo.all.min.js"></script>
        <script src="https://kendo.cdn.telerik.com/@kendoVersion/js/kendo.aspnetmvc.min.js"></script>
    }
    @if ((Model?.RequireUI ?? false) || Model?.CurrentUser != null)
    {
        <script src="~/js/UIFunctions.js" asp-append-version="true"></script>
        <script src="~/js/UI.js" asp-append-version="true"></script>
    }
    @if (Model?.RequireValidation ?? false)
    {
        <script src="~/js/jquery.validate.min.js" asp-append-version="true"></script>
        <script src="~/js/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
        <script src="~/js/expressive.annotations.validate.js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
    <style>
        .notification-section {
            text-align: center;
            line-height: 4em;
        }

            .notification-section .k-button {
                width: 250px;
            }
    </style>
    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "prod")
    {
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-33547530-1"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-33547530-1');
        </script>
        <!-- End Google Analytics -->
        <!-- Google Tag Manager -->
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-TXQM5X8');</script>
        <!-- End Google Tag Manager -->
    }
</head>
<body class="d-flex flex-column min-vh-100">
    @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "prod")
    {
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TXQM5X8"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->
    }
    @if (Model?.RequireUI ?? false)
    {
        <div class="k-widget k-loader k-loader-primary k-loader-md k-loader-pulsing-2 k-loading-panel" id="default-loading-panel" name="default-loading-panel"
         data-role="loader"
         aria-label="Loading" aria-hidden="false"
         style="@(Model.RequiresLoading ? "" : "display: none;")">
            <div class="k-loading-panel-mask"></div>
            <div class="k-loading-panel-wrapper">
                @(Html.Kendo().Loader()
            .Name("default-activity-indicator")
            .Size(LoaderSize.Large)
            .ThemeColor(LoaderThemeColor.Secondary)
            .Type(LoaderType.InfiniteSpinner)
            .Visible(true))
                <div class="k-loading-panel-text">Loading...</div>
            </div>
        </div>
    }
    @if ((Model?.RequireClientHeader ?? true) && (Model?.CurrentUser != null || SignInManager.IsSignedIn(User)))
    {
        <partial name="_ClientHeader" />
    }

    @(Html.Kendo().Notification()
    .Name("default-notification-panel")
    .AppendTo("#notificationContent")
    .Deferred())
    <div id="notificationContent" class="notification-section k-content"></div>

    
        <main role="main" >
            @RenderBody()
        </main>
    

   <footer class="mt-auto bg-light pt-3">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12 col-md-3">
            <ul class="list-unstyled small">
              <li><strong>©@DateTime.UtcNow.Year Suture Health, Inc.</strong></li>
              <li >
                <a href="~/pdf/SutureHealth%20Terms%20of%20Service.pdf" target="_blank">Terms of Service</a>
              </li>
              <li >
                <a href="~/pdf/SutureHealthPrivacyPolicy_18July2022.pdf" target="_blank">Privacy Policy</a>
              </li>
            </ul>
          </div>
          <div class="col-12 col-md-3">
            <ul class="list-unstyled small">
              <li><strong>Support Desk:</strong> Mon-Fri, 8am - 5pm CST</li>
              <li>Email: <a href="mailto:support@suturehealth.com">support@suturehealth.com</a></li>
              <li>Phone:(205) 417-2400</li>
            </ul>
          </div>
          <div class="col-12 col-md-6">
            <p class="small">
              <strong>Supported Browsers:</strong> Latest version of <a href="https://www.google.com/chrome/browser/desktop/index.html" target="_blank">Chrome</a> is recommended.
              Otherwise, IE 11+ or latest versions of Firefox/Safari. Document
              annotations work best on non-mobile browsers.
            </p>
          </div> 
        </div>
      </div>
    </footer>
    
</body>
</html>