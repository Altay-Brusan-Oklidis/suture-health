@model SutureHealth.AspNetCore.Areas.Network.Models.Listing.ListingDownloadRequest

<form id="ListingDownloadForm" action="@Url.RouteUrl("NetworkListingDownload")" method="post">
    @if (Model.Filters != null)
    {
        for (int i = 0; i < Model.Filters.Count(); ++i)
        {
            @Html.HiddenFor(m => m.Filters[i].SectionKey)
            @Html.HiddenFor(m => m.Filters[i].FilterKey)
        }
    }
    @Html.HiddenFor(m => m.Preset)
    @Html.HiddenFor(m => m.Radius)
    @Html.HiddenFor(m => m.Search)
    @Html.HiddenFor(m => m.SortOrder)
    @Html.HiddenFor(m => m.ProvidersOnPage)
    <script type="text/javascript">
        $(document).ready(function () {
            var form = $("#ListingDownloadForm");

            form.submit();
            form.remove();
        });
    </script>
</form>